<pre><span>#</span><span>!/bin/</span><span>bash</span>
<span>t2s</span>() {
    wget -q -U Mozilla -O $(<span>tr</span> <span>' '</span> _ &lt;&lt;&lt; <span>"$1"</span>| cut -b 1-15).mp3 <span>"http://translate.google.com/translate_tts?ie=UTF-8&amp;tl=en&amp;q=$(</span><span>tr</span><span> ' ' + &lt;&lt;&lt; "</span>$<span>1</span><span>")"</span>;
}

<span>FILE</span>=$(<span>tr</span> <span>' '</span> _ &lt;&lt;&lt; <span>"$1"</span> | cut -b 1-15).mp3;
t2s $<span>1</span> &amp;&amp; play $<span>FILE</span> -q &amp;&amp; rm $<span>FILE</span>
</pre>
