<pre>(load <span>"~/.emacs.d/site-lisp/smex.el"</span>)
(<span>require</span> '<span>smex</span>)
(smex-initialize)
(global-set-key (kbd <span>"M-x"</span>) 'smex)
(global-set-key (kbd <span>"M-X"</span>) 'smex-major-mode-commands)
(global-set-key (kbd <span>"C-c C-c M-x"</span>) 'execute-extended-command)
</pre>
