<pre><span>#</span><span>!/bin/</span><span>bash</span>

<span>FILE</span>=<span>""</span>

<span>t2s</span>()
{
    <span>first</span>=<span>"$1"</span>;
    <span>lang</span>=<span>""</span>;
    <span>FILE</span>=$(<span>tr</span> <span>' '</span> _ &lt;&lt;&lt; <span>"$first"</span>| cut -b 1-15).mp3;

    <span>shift</span>;

    <span>while </span><span>getopts</span> <span>"ez"</span> arg
    <span>do</span>
    <span>case</span> $<span>arg</span><span> in</span>
        e)
        <span>lang</span>=<span>"en"</span>;
        ;;
        z)
        <span>lang</span>=<span>"zh"</span>;
        ;;
        ?)
        <span>echo</span> <span>"Usage : t2s &lt;text&gt; -e/-z"</span>;
        <span>echo</span> <span>"   -e : in English"</span>;
        <span>echo</span> <span>"   -z : in Chinese"</span>;
        <span>exit</span> 1;
        ;;
    <span>esac</span>
    <span>done</span>

    wget -q -U google-chrome -O $<span>FILE</span> <span>"http://translate.google.com/translate_tts?ie=UTF-8&amp;tl=$lang&amp;q=$(</span><span>tr</span><span> ' ' + &lt;&lt;&lt; "$first")"</span>;
}

t2s <span>"$1"</span> $<span>2</span> &amp;&amp; play $<span>FILE</span> -q &amp;&amp; rm $<span>FILE</span>
</pre>
